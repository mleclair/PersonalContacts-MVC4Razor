@model IEnumerable<MvcApplication2.Models.UserProfile>

@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>
<p>
    @Html.ActionLink("Add User", "AddUser" , "Account")
</p>
<section id="PersonalContacts" style="float:left;">
    <table class="PersonalContacts">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
        </tr>
    @if (Model != null && Model.Count() > 0) {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @Html.HiddenFor(modelItem => item.PersonalContactId)*@
                <td>
                    @Html.ActionLink("Edit", "EditUser",  new { username=item.UserName }) | 
                    @Html.ActionLink("Delete", "DeleteUser", new { username=item.UserName})
                </td>
            </tr>
        }
    }
    </table>
</section>
